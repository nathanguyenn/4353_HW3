<head>
  <title>Login</title>
  <link rel="stylesheet" href="./css/profile.css" />
  <script
    src="https://kit.fontawesome.com/7890dbf088.js"
    crossorigin="anonymous"
  ></script>
</head>

<body>
  <form action="/profile" style="border: 1px solid #ccc" method="post">
    <div class="container">
      <h1>
        User Profile<i class="fa-solid fa-user-lock" onclick="logout()"></i>
      </h1>

      <hr />

      <label for="username"><b>Username</b></label>
      <input
        type="text"
        placeholder="<%= email  %>"
        name="username"
        value="<%= email  %>"
        readonly
      />

      <input
        type="hidden"
        placeholder="<%= password  %>"
        name="password"
        value="<%= password  %>"
        readonly
      />

      <label for="name"><b>Full Name</b></label>
      <input
        type="text"
        placeholder="<%= name %>"
        name="name"
        maxlength="50"
        required
      />

      <label for="ad1"><b>Address 1:</b></label>
      <input
        type="text"
        placeholder="<%= street %>"
        name="ad1"
        maxlength="100"
        required
      />

      <label for="ad2"><b>Address 2:</b></label>
      <input
        type="text"
        placeholder="Enter Address 2(optional):"
        name="ad2"
        maxlength="100"
      />

      <label for="city"><b>City</b></label>
      <input
        type="text"
        placeholder="<%= city %>"
        name="city"
        maxlength="100"
        required
      />

      <label for="state">Choose a state:</label>
      <select name="state" id="state" required>
        <option value="TX">TX</option>
        <option value="WA">WA</option>
        <option value="FL">FL</option>
        <option value="OH">OH</option>
        <option value="NV">NV</option>
        <option value="DC">DC</option>
        <option value="NY">NY</option>
        <option value="OK">OK</option>
      </select>

      <label for="zip"><b>Zip code:</b></label>
      <input
        type="text"
        placeholder="<%= zip %>"
        name="zip"
        maxlength="9"
        minlength="5"
        required
      />

      <div class="clearfix">
        <button
          type="button"
          class="cancelbtn"
          onclick="location.href='/fuelQuoteForm'"
        >
          Cancel
        </button>
        <button type="submit" class="signupbtn">Save Profile</button>
      </div>
    </div>
  </form>
  <script>
    function logout() {
      let result = confirm("Are you sure you want to logout?");
      if (result) {
        location.href = "/";
      }
    }
  </script>
</body>
